{% extends 'base.html.twig' %}

{% block title %}Liste de maisons d'édition{% endblock %}

{% block body %}
<section class="container px-4">
<div class="w-50 m-auto">
    <h1>Liste de maisons d'édition</h1>
    <ul class="list-group list-group-flush">
        {% for editor in editors %}
            <div class="card mb-1">
                <div class="card-body">
                    <div class="card-title d-flex justify-content-between">
                        <a href="{{ path('app_admin_editor_show', {id: editor.id}) }}" class="stretched-link link-dark">
                            <h4 class="mb-1">{{ editor.name }}</h4>
                        </a>
                        <small class="text-muted">Identifiant : {{ editor.id }}</small>
                    </div>
                </div>
            </div>
        {% endfor %}
    </ul>
    {{ pagerfanta(editors) }}
</div>
</section>
{% endblock %}
